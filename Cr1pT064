yellow="\e[0;33m"
white="\e[0;37m"
#                BANNER DE TEXTO.. ..

Banner64(){
	clear
	sleep 0.5
	echo ""
echo -e  "${verde}        ██████╗ ██████╗ ██████╗ ███████╗                                    "
echo -e  "${verdd}       ██╔════╝██╔═══██╗██╔══██╗██╔════╝                                    "
echo -e  "${verde}       ██║     ██║   ██║██║  ██║█████╗    ${negro}  ▄▀▀▀▀▀▄            "
echo -e  "${verde}       ██║     ██║   ██║██║  ██║██╔══╝    ${negro} ▐ ▄   ▄ ▌           "
echo -e  "${verde}       ╚██████╗╚██████╔╝██████╔╝███████╗  ${negro} ▐ ▀▀ ▀▀ ▌           "
echo -e  "${verde}        ╚═════╝ ╚═════╝ ╚═════╝ ╚══════╝  ${negro}  ▀▄ ═ ▄▀            "
echo -e  "${verde}                                          ${negro}  ▐ ▀▄▀ ▌            "
echo -e "${azul}                        BASE64                        "                      
echo -e "${negro}  ▄▄▄                  ──────────────  ${rojo}  ▄▀█▀█▀▄                "     
echo -e "${negro}  █▀█▀█ █▀█  █▀█ ▄███▄  ─────────────  ${rojo} ▀▀▀▀▀▀▀▀▀  ▄▄▄▄▄        "
echo -e "${negro}  █▀█▀█ █▀██ █▀█ █▄█▄█             ▄▄   ${rojo}   ░░░   ▄█▄█▄█▄█▄      "
echo -e " ${negro} █▀█▀█ █▀████▀█ █▄█▄█    ── ▄▄─── ▐▌   ${rojo}    +       ░░░          "
echo -e "${negro}  █▀█▀█ █▀████▀█ █▄█▄█ ▌██▐▌▐█▐▐▌█▌█▌█▌▌${rojo}    +       ░░░          "
}
Menu(){
	Banner64
echo ""
printf "${negro}[${verde} ¿? ${negro}]${negro} >>>${verde} MENU V1 PRIMERA VERSION" | pv -qL 12
echo ""
echo ""
echo -e "${negro}[${verde} 01 ${negro}]${negro} >>>${verde} Ofuscar texto (Base64)${rojo} :)"
