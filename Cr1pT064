sleep 0.5
echo -e "${negro}[${verde} :D ${negro}] >>>${verde} Tu archivo desofuscado esta en la carpeta desofuscados${rojo} :)"
echo -e -n "${negro}
${negro}[${verde} :) ${negro}]${negro} >>>${verde} Presione${cian} ENTER${verde} para continuar${rojo} :)

${negro}[${verde} >> ${negro}]${negro} >>>" ${verde}
read $ENTER
bash Cr1pT064

